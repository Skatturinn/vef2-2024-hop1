{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "es6",
      "strict": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "noEmitOnError": true,
      "sourceMap": true,
      "baseUrl": "./"
    },
    "include": ["**/*.ts", "src/lib/auth.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}